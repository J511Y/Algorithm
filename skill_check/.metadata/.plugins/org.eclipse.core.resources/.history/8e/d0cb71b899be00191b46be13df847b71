package workspace;
import java.util.*;
import java.util.stream.IntStream;

public class test {
	public static String solution(int n) {
	      StringBuffer answer = new StringBuffer();
	      int limit = 0;
	      while(Math.pow(3, limit)<n)limit++;
	      limit--;
	      int x = n-1;
	      for(int i=1; i<=limit; i++) {
	    	  int a = x/(int)Math.pow(3, i);
	    	  answer.append(a==0?"4":a==1?"1":"2");
	    	  x-=(int)Math.pow(3, i);
	    	  System.out.println(i+"번째 x :"+x);
	      }
	      System.out.println("여기:"+new String(answer.reverse()));
	      answer.append(n%3==0?"4":n%3==1?"1":"2");
	      
	      return new String(answer.reverse());
	  }
	public static void main(String [] args) {
		System.out.println(solution(30));
	}
}
