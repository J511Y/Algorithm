package workspace;
import java.io.*;
import java.util.*;
import java.util.stream.Collectors;
public class Main {
    public static void main(String[] args) {
        Scanner sc= new Scanner(System.in);
        int r = sc.nextInt();
        boolean find = false;
        for(int i=1; i<r; i++) {
        	byte []arr = (i+"").getBytes();
        	int sum = i;
        	for(byte b : arr)sum+=Integer.parseInt((char)b+"");
        	if(sum==r) {
        		System.out.println(i);
        		find = true;
        		break;
        	}
        }
        if(!find)System.out.println(0);
    }
}
