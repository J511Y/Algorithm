package baekjoon_tree;
import java.util.*;
public class baekjoon_6118 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int[][] arr = new int[20001][20001];
		int[] vst = new int[20001];
		int dis = 0, cnt = 0, pos = 0, max = 0;
		String s = "";
		while(!(s = sc.nextLine()).equals("")) {
			String[] split = s.split(" ");
			int a = Integer.parseInt(split[0]), b = Integer.parseInt(split[1]);
			max = Math.max(max, Math.max(a, b));
			arr[a][b] = arr[b][a] = 1;
		}
		Queue<int[]> q = new LinkedList<>();
		q.add(new int[] {1, 0}); vst[1] = 1;
		while(!q.isEmpty()) {
			int[] tmp = q.poll();
			for(int i = 0; i < max + 1; i++) {
				if(arr[tmp[0]][i] == 1 && vst[i] == 0) {
					if(dis == tmp[1]) {
						dis++;
						cnt = 1;
						pos = i;
					}else {
						cnt++;
					}
					q.add(new int[] {i, dis + 1});
				}
			}
		}
		System.out.println(pos+" "+dis+" "+cnt);
	}
}
