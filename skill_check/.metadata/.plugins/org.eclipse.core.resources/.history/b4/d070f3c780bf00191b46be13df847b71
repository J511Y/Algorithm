package workspace;
import java.io.*;
import java.util.*;
import java.util.stream.Collectors;
public class Main {
	public static void main(String[] args) throws Exception {
		Scanner sc = new Scanner(System.in);
		int a=sc.nextInt();
		int x=1;
		int sum=0;
		while(true) {
			if(sum+x>=a)break;
			sum+=x;
			x++;
		}
		if(x%2==0) {
			
		}else {
			System.out.println((x-a-sum+1)+"/"+(a-sum));						
		}
	}
}
