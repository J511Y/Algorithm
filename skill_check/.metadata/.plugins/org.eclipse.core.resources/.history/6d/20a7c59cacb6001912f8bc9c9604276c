package workspace;
/*
 * 두 정수 a, b가 주어졌을 때 a와 b 사이에 속한 모든 정수의 합을 리턴하는 함수, solution을 완성하세요. 
예를 들어 a = 3, b = 5인 경우, 3 + 4 + 5 = 12이므로 12를 리턴합니다.

제한 조건
a와 b가 같은 경우는 둘 중 아무 수나 리턴하세요.
a와 b는 -10,000,000 이상 10,000,000 이하인 정수입니다.
a와 b의 대소관계는 정해져있지 않습니다.
입출력 예
a	b	return
3	5	12
3	3	3
5	3	12
 */
class Solution2 {
	  public long solution(int a, int b) {
	      long answer = 0;
	      if(a==b)return a;
	      int max = Math.max(a, b);
	      int min = Math.min(a, b);
	      int mid = (max+min)/2;
	      int routine = (max-min)/2;
	      boolean bool = min%2==1;
	      System.out.println(max+","+min+","+mid+","+routine);
	      answer = mid*routine+(bool?mid:0);
	      return answer;
	  }
	}
public class skill_check2 {

	public static void main(String[] args) {
		String answer="";
		String phone_number = "01033334444";
		String star = "";
		for(int i=0; i<phone_number.length()-4;i++) {
			star+="*";
		}
		answer = phone_number.replaceAll(phone_number.substring(0,phone_number.length()-4),star);
		System.out.println(answer);

	}

}
