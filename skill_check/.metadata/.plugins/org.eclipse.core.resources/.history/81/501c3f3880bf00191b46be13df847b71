package workspace;
import java.io.*;
import java.util.*;
import java.util.stream.Collectors;
public class Main {
	public static void main(String[] args) throws Exception {
		Scanner sc = new Scanner(System.in);
		int a=sc.nextInt();
		int x=1;
		int sum=x;
		while(true) {
			sum+=x;
			if(sum>=a)break;
			x++;
		}
		System.out.println(x);
	}
}
