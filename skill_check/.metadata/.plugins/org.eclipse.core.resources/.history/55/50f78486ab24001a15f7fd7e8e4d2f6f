import java.util.*;
class Main {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int x = sc.nextInt(), y = sc.nextInt(), cha = y - x, cnt = 0;
		for(int i = 1;;i++) {
			cha -= i; cnt++;
			if(cha <= 0) {
				System.out.println(cnt); break;
			}
			cha -= i; cnt++;
			if(cha <= 0) {
				System.out.println(cnt); break;
			}
		}
	}
}
/*
 * 1 // 1
 * 2 // 1 1
 * 3 // 1 1 1
 * 4 // 1 2 1
 * 5 // 1 2 1 1
 * 6 // 1 2 2 1
 * 7 // 1 2 1 2 1
 * 8 // 1 2 2 2 1
 * 9 // 1 2 3 2 1
 * 10// 1 2 3 2 1 1
 * 11// 1 2 3 2 2 1
 * 12// 1 2 3 3 2 1
 * 13// 1 2 3 3 2 1 1
 * 14// 1 2 3 3 2 2 1
 * 15// 1 2 3 3 3 2 1
 * 16// 1 2 3 4 3 2 1
 */